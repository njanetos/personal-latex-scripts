%% nickhomework.sty - standard paper setup for presentations

\ProvidesPackage{nickpresentation}

\usetheme{m}
\usecolortheme{rose}

\usepackage{amssymb, amsmath, mathpazo, amsthm, tikz, hyperref, sgame, cancel, booktabs}
\usepackage[scale=2]{ccicons}

\usetikzlibrary{calc}
\usetikzlibrary{decorations.pathreplacing}
\usetikzlibrary{calc}
\usetikzlibrary{positioning}

\newtheorem{assumption}{Assumption}
\newtheorem{claim}{Claim}

\setbeamertemplate{itemize items}[square]

\newcommand{\E}{\mbox{E}}
\newcommand{\N}{\mbox{N}}
\newcommand{\U}{\mbox{U}}
\renewcommand{\P}{\mbox{P}}

%\let\oldhat\hat
\renewcommand{\vec}[1]{\mathbf{#1}}

\newcommand{\scalprod}[2]{\left\langle #1,#2 \right\rangle}
\newcommand{\scalprodv}[2]{\scalprod{\vec{#1}}{\vec{#2}}} %includes vector arrows
\newcommand{\scalprodV}[2]{\scalprod{\vect{#1}}{\vect{#2}}}
\newcommand{\suchthat}{\;\ifnum\currentgrouptype=16 \middle\fi|\;}

\newcommand{\abs}[1]{\lvert#1\rvert}
\newcommand{\norm}[1]{\lVert#1\rVert}

\newtheorem*{claim}{Claim}
\newtheorem*{result}{Result}
\newtheorem{proposition}[theorem]{Proposition}